@model Product
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="ratio ratio-4x3 border rounded">
                <img src="~/@Model.Iamgeurl" class="img-fluid rounded" alt="@Model.ProductName" />
            </div>
        </div>
        <div class="col-md-6">
            <h2>@Model.ProductName</h2>
            <p class="text-muted">@Model.Description</p>
            <h4 class="text-primary fw-bold">$@Model.Price</h4>
            <a href="@Url.Action("Store", "Products")" class="btn btn-secondary mt-3">Back to Store</a>
        </div>
    </div>
</div>
