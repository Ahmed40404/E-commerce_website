
<div class="container mt-5">
    <h2 class="mb-4 text-center text-danger">Delete Product</h2>
    <div class="alert alert-warning text-center">
        <h4>Are you sure you want to delete this product?</h4>
        <p><strong>@Model.ProductName</strong></p>
        <p class="text-muted">@Model.Description</p>
        <p><strong>Price: </strong> $@Model.Price</p>
    </div>

    <form action="/Products/DeleteConfirmed" method="post" class="text-center">
        <input type="hidden" name="ProductId" value="@Model.ProductId" />
        <button type="submit" class="btn btn-danger btn-lg">Yes, Delete</button>
        <a href="/Products/Index" class="btn btn-secondary btn-lg">Cancel</a>
    </form>
</div>
