@model IEnumerable<Product>

<div class="container mt-5">
    <h2 class="mb-4">Eren Shop</h2>
    <div class="row">
        @foreach (var product in Model)
        {
                <div class="col-md-3 mb-4">
                    <div class="card h-100">
                        <img src="~/@product.Iamgeurl" class="card-img-top" alt="@product.ProductName" style="height: 200px; object-fit: cover;" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.ProductName</h5>
                            <p class="card-text text-truncate">@product.Description</p>
                            <p class="text-primary fw-bold">$@product.Price</p>
                            <a href="@Url.Action("Details", "Products", new { id = product.ProductId })" class="btn btn-primary mt-auto">View Details</a>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>
