@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}   

<form action="/Login/Login" method="post" class="w-50 mx-auto mt-3">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" value="@ViewBag.email" placeholder="Enter your email" required>
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input type="password" name="password" class="form-control" id="exampleInputPassword1" value="@ViewBag.password" placeholder="Enter your password" required>
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword2" class="form-label">Confirum Password</label>
        <input type="password" name="confirumPassword" class="form-control" id="exampleInputPassword2" value="@ViewBag.confirumPassword" placeholder="Re-enter your password" required>
    </div>
    <button type="submit" class="btn btn-primary w-100">Login</button>
</form>
