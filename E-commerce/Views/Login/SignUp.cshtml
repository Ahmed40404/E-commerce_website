@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@if (ViewBag.Error!=null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-success">@ViewBag.Success</div>
}

<form action="/Login/SignUp" method="post" class="w-50 mx-auto mt-3">
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" name="name" id="Name" value="@ViewBag.name" required placeholder="Enter your username">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" value="@ViewBag.email" required placeholder="Enter your email" >
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input type="password" name="password" class="form-control" id="exampleInputPassword1" value="@ViewBag.password" required placeholder="Enter your password">
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword2" class="form-label">Confirum Password</label>
        <input type="password" name="confirumPassword" class="form-control" id="exampleInputPassword2" value="@ViewBag.confirumPassword" required placeholder="Re-enter your password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>